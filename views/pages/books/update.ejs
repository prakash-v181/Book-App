<!DOCTYPE html>
<html>
  <%- include('../../layout/head') %>
  <body>
    <%- include('../../layout/header') %>
    <h3>Update Book</h3>
    <div class="container">
      <main>
        <h4>Book informations ready to be change:</h4>
        <section class="newResultFormSection">
          <div class="newResultFormDiv">
            <form action="/update/<%- book.id %>" method="post" class="newResultForm">
              <input type="hidden" name="_method" value="put">
              <input type="hidden" name="id" value='<%= book.id %>'>
              <fieldset>
                <label>Title:</label>
                <input type="text" name="title" value="<%- book.title %>" >
              </fieldset>
              <fieldset>
                <label>Author:</label>
                <input type="text" name="author" value="<%- book.author %>" >
              </fieldset>
              <fieldset>
                <label>ISBN:</label>
                <input type="text" name="isbn" value="<%- book.isbn %>" >
              </fieldset>
              <fieldset>
                <label>Description:</label><br>
                <textarea name="description" cols="100" rows="10" value="<%- book.description %>"><%- book.description %></textarea>
              </fieldset>
              <input type="hidden" name="image_url" value="<%- book.image_url %>" >
              <button>Add to Database</button>
            </form>
          </div>
          <div class="imageDiv">
            <h4>Book Cover</h4>
            <img src="<%= book.image_url %>" alt="No Image Available">
          </div>
        </section>
      </main>
    </div>
    <%- include('../../layout/footer') %>
  </body>
</html>
